<% if !@friends.empty? %>
  <div class="table-responsive-sm">
    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">First Name</th>
          <th scope="col">Last Name</th>
          <th scope="col">E-mail</th>
          <th scope="col" class="text-center">Stocks</th>
          <th scope="col" class="text-center">Action</th>
        </tr>
      </thead>
      <tbody>
        <% count = 0 %>
        <% @friends.each do |friend| %>
          <tr>
            <th scope="row"><%= count += 1 %></td>
            <td><%= friend.first_name %></td>
            <td><%= friend.last_name %></td>
            <td><%= friend.email %></td>
            <td class="text-center"><%= friend.stocks.count %></td>
            <% if true %>
              <td class="text-center px-0">
                <%= link_to (fa_icon 'eye'), user_path(friend), class:"btn btn-primary btn-sm", title:"Follow User" %>
                <%= link_to (fa_icon 'trash'), friendship_path(friend), method: :delete, data: { confirm: "Are you sure?" }, class:"btn btn-danger btn-sm", title:"Remove" %>
              </td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>
