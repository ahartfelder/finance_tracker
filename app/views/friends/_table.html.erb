<% if !@friends.empty? %>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>#</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>E-mail</th>
        <th class="text-center">Stocks</th>
        <th class="text-center">Action</th>
      </tr>
    </thead>
    <tbody>
      <% count = 0 %>
      <% @friends.each do |friend| %>
        <tr>
          <td><%= count += 1 %></td>
          <td><%= friend.first_name %></td>
          <td><%= friend.last_name %></td>
          <td><%= friend.email %></td>
          <% if true %>
            <td class="text-center">
              <%= link_to '#', class:"btn btn-warning btn-sm" do %>
                <%= fa_icon 'plus', title:"Add" %>
              <% end %>
            </td>
            <td class="text-center">
              <%= link_to '#', method: :delete, data: { confirm: "Are you sure?" }, class:"btn btn-danger btn-sm" do %>
                <%= fa_icon 'trash', style:"color: black;", title:"Remove" %>
              <% end %>
            </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
