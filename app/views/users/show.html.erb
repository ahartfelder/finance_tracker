<h1>User Details</h1>

<div class="row">
  <div class="col-md-9">
    <div class="card shadow mb-4" style="max-width: fit-content;">
      <table class="table">
        <tbody>
            <tr class="text-center">
              <td><strong>Name: </strong><%= @user.full_name %></td>
              <td><strong>Email: </strong><%= @user.email %></td>
              <td>
                <% if current_user.not_friends_with?(@user.id) %>
                  <%= link_to (fa_icon 'plus'), friendships_path(friend: @user), method: :post, class:"btn btn-warning btn-sm", title:"Follow User" %>
                <% else %>
                  <%= fa_icon 'check', class:"btn btn-success btn-sm", title:"You're already friends!" %>
                <% end %>
              </td>
            </tr>
        </tbody>
      </table>
    </div>
    <%= render 'stocks/table' %>
  </div>
</div>

