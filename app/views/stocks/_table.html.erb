<% if !@stocks.empty? %>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>#</th>
        <th>Ticker</th>
        <th>Company Name</th>
        <th>Price</th>
        <th colspan="2" class="text-center">Action</th>
      </tr>
    </thead>
    <tbody>
      <% count = 0 %>
      <% @stocks.each do |stock| %>
        <tr>
          <td><%= count += 1 %></td>
          <td><%= stock.ticker %></td>
          <td><%= stock.name %></td>
          <td><%= number_to_currency(stock.last_price) %></td>
          <% if !current_user %>
            <td class="text-center">
              <%= link_to '#', class:"btn btn-warning btn-sm" do %>
                <%= fa_icon 'plus', title:"Add" %>
              <% end %>
            </td>
          <% else %>
            <td class="text-center">
              <%= link_to user_stock_path(stock), method: :delete, data: { confirm: "Are you sure?" }, class:"btn btn-danger btn-sm" do %>
                <%= fa_icon 'trash', style:"color: black;", title:"Remove" %>
              <% end %>
            </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
