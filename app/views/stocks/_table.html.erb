<% if !@stocks.empty? %>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>#</th>
        <th>Ticker</th>
        <th>Company Name</th>
        <th>Price</th>
        <th colspan="2" class="text-center">Action</th>
      </tr>
    </thead>
    <tbody>
      <% count = 0 %>
      <% @stocks.each do |stock| %>
        <tr>
          <td><%= count += 1 %></td>
          <td><%= stock.ticker %></td>
          <td><%= stock.name %></td>
          <td><%= number_to_currency(stock.last_price) %></td>
          <td class="text-center">
            <% if current_user.can_track_stock?(stock.ticker) %>
              <%= link_to (fa_icon 'plus'), user_stocks_path(user: current_user, ticker: stock.ticker), method: :post, class:"btn btn-success btn-sm" %>
            <% elsif current_user.id != @user.id %>
              <span class="badge bg-secondary text-white">
                You're already tracking
                <% if !current_user.under_stock_limit? %>
                  10 stocks!
                <% elsif current_user.stock_already_tracked?(stock.ticker) %>
                  this stock!
                <% end%>
              </span>
            <% end %>
          </td>
          <% if current_user.id == @user.id %>
            <td class="text-center">
              <%= link_to (fa_icon 'trash', title:"Remove"), user_stock_path(stock), method: :delete, data: { confirm: "Are you sure?" }, class:"btn btn-danger btn-sm" %>
            </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <h5>Not tracking any stocks!</h5>
<% end %>
